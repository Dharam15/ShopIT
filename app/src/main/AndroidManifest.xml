<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ShopIT">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/bag"
        android:label="ShopIT"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.ShopIT.RegisterActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.ShopIT.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ShopIT.ViewAllActivity" />
        <activity android:name="com.example.ShopIT.MyAddressesActivity" />
        <activity
            android:name="com.example.ShopIT.AddAddressActivity"
            android:theme="@style/BlueProgressbar" />
        <activity android:name="com.example.ShopIT.DeliveryActivity" />
        <activity android:name="com.example.ShopIT.OrderDetailsActivity" />
        <activity android:name="com.example.ShopIT.ProductDetailActivity" />
        <activity android:name="com.example.ShopIT.CategoryActivity" />
        <activity
            android:name="com.example.ShopIT.MainActivity"
            android:label="ShopIT"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>